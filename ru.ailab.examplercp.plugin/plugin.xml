<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="ru.ailab.examplercp.plugin.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="ru.ailab.examplercp.plugin.Perspective"
            id="ru.ailab.examplercp.plugin.perspective">
      </perspective>
   </extension>
   <extension
         id="ru_ailab_examplercp_product"
         point="org.eclipse.core.runtime.products">
